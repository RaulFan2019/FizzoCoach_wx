/* noAuth.wxss */
.club__info,.user-info{
  width: 100%;
  text-align: center;
}

.club-info__avatar{
  width:132rpx;
  height: 132rpx;
  margin: 24rpx 0 12rpx 0;
  border: 1px solid #E5E5E5;
  border-radius: 50%;
}

.club-info__name{
  display: block;
  width: 100%;
  height: 37rpx;
  line-height: 37rpx;
  margin-bottom: 37rpx;
  color: #343339;
  font-size: 26rpx;
}

.weui-loadmore__tips{
  font-size: 34rpx;
  color: #FF4612;
}

.foot-tip{
  text-align: center;
  font-size: 20rpx;
  color: rgba(32,31,37,0.95);
  margin-top: -50rpx;
  margin-bottom:20rpx;
}

.foot-tip text{
  display: block;
}

.weui-loadmore {
  margin:1.7em auto;
}

.user-info__avatar{
  width:120rpx;
  height: 120rpx;
  margin: 36rpx 0 20rpx 0;
  border: 0;
  border-radius: 50%;
}

.user-info__name{
  display: block;
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  color: #222;
  font-size: 34rpx;
}

.user-info__phone{
  display: block;
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 26rpx;
  color: #101010;
  margin-bottom: 34rpx;
}