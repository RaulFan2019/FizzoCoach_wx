/* deviceAdding.wxss */
.card{
  background-color: #EFEFF4;
}
.tip-bg{
  width: 100%;
  height: 100%;
}

.searching__icon{
  display: block;
  width: 290rpx;
  height: 290rpx;
  margin: 0 auto 522rpx auto;
}

.tip-txt{
  color: #222;
  font-size: 26rpx;
  text-align: center;
}

.tip-txt-1{
  margin: 53rpx 0 51rpx 0;
}

.tip-txt-2{
  margin: 112rpx 0 38rpx 0;
}

.banding{
  display: inline-block;
  text-align: center;
  height: 120rpx;
  padding: 0 24rpx;
  border-right: 1rpx solid #E5E5E5;
}
.banding-device__icon{
    display: block;
    width: 34rpx;
    height: 77rpx;
    margin: 0 auto;
}

.banding-device__name,.weui-cell__ft {
  color: #222;
  font-size: 26rpx;
}

.search{
  height: 128rpx;
  line-height: 128rpx;
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.weui-input{
  width: 485rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  background-color: #EFEFF4;
  padding: 0 30rpx;
  font-size: 34rpx;
}

.weui-cells::after,.weui-cells::before{
  border: 0;
}

.weui-btn{
  width: 164rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 0;
}

button[type="warn"] {
  color:#FFFFFF;
  background-color:#FF4612;
}

button[disabled][type="warn"] {
  background-color: #E5E5E5;
  color: #FFF;
}

button[disabled][type="warn"]::after {
  border:1px solid rgba(0, 0, 0, 0);
}

.c999{
  color: #999;
}

.weui-loadmore__tips_in-line{
  background-color: transparent;
}