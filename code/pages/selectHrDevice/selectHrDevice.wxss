/* selectHrDevice.wxss */
.banding{
  text-align: center;
  height: 120rpx;
}
.banding-device__icon{
    display: block;
    width: 34rpx;
    height: 77rpx;
    margin: 0 auto;
}

.banding-trainee__avatar{
    display: block;
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin: 10rpx auto 0 auto;
}

.banding__time text{
  display: inline-block;
  width: 240rpx;
  height: 52rpx;
  line-height: 52rpx;
  color: #c7c7cc;
  font-size: 20rpx;
  border-bottom: 1px solid #E5E5E5;
  margin-top: 6rpx;
}

.banding-device__name,.banding-trainee__name {
  color: #222;
  font-size: 26rpx;
}

.nobanding-tip{
  display: inline-block;
  height: 120rpx;
  line-height: 120rpx;
  color: #222;
  font-size: 26rpx;
}